<%= link_to 'Voltar', root_path %>
<%= link_to 'Anunciar um produto', new_product_path %>

<% if @available_products.empty? %>
  <h3>Nenhum produto anunciado!</h3>
<% else %>
  <% @available_products.each do |product| %>
      <p><%=link_to "#{product.name} - #{number_to_currency product.price}", product%></p>
  <% end %>
<% end %>